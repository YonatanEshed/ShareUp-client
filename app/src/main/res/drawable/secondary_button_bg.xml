<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray2"/> <!-- Darker Blue When Pressed -->
            <corners android:radius="8dp"/> <!-- Adjust for More Rounding -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray1"/> <!-- Main Blue Color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>