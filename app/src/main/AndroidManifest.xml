<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ShareUpApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShareUp"
        tools:targetApi="31">
        <activity
            android:name=".ACTIVITIES.ProfileList"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.Search"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.UploadPost"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.Feed"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.Comments"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.SinglePost"
            android:exported="false"
            android:theme="@style/Theme.ShareUp" />
        <activity
            android:name=".ACTIVITIES.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ACTIVITIES.Register"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.EditProfile"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.Profile"
            android:exported="false" />
        <activity
            android:name=".ACTIVITIES.BASE.BaseActivity"
            android:exported="false" />

        <service
            android:name=".SERVICES.FirebaseNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
</manifest>